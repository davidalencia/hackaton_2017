<!DOCTYPE html>
<html>
  <head>
    <script src="/js/jquery.js" type="text/javascript"> </script>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <div >
      <img src="" alt="">
      <a href="#"></a>
      <p></p>
    </div>
    <div id="main_container">

    </div>

  <script type="text/javascript">
  var cuantos_llevo=0;
  $.ajax({
    url:"/producto/jalar",
    method: "post",
    data:{cuantos: 9,
          cuantos_llevas: cuantos_llevo},
    success: function (res) {
            cuantos_llevo+=9;
            for (var alfa = 0; alfa < 9; alfa++) {

                $("#main_container").append(
                  '<div class="container" style="margin-bottom: 20px;">'+
                    '<img src="'+res[alfa].direccionImagen+'"></img>'+
                    '<h2 href="#" style=" text-align: center;">'+res[alfa].producto+'</h2>'+
                    '<h3 style=" text-align: center;">'+res[alfa].costo+'</h3>'+
                    '<p style=" text-align: center;">'+res[alfa].descripcion+'</p>'+
                  '</div>'
                )
            }



    },
  });

  </script>
  </body>
</html>
